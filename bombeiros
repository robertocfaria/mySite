<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Bombeiros - Riba D'Ave</title>
  <style>
    body, html {
      margin: 0;
      padding: 0;
      height: 100%;
      overflow: hidden;
    }
    .grid-container {
      display: grid;
      grid-template-columns: 50% 50%;
      grid-template-rows: 50% 50%;
      width: 100vw;
      height: 100vh;
    }
    iframe {
      width: 100%;
      height: 100%;
      border: none;
    }
  </style>
</head>
<body>
  <div class="grid-container">
    <iframe id="frame1"></iframe>
    <iframe id="frame2"></iframe>
    <iframe id="frame3"></iframe>
    <iframe id="frame4"></iframe>
  </div>

  <script>
    const url = "https://www.preventech.pt/app/quartel/fvd.php?display=1&key=93b576bb048fefea74a181eb8b566d43";
    const interval = 100000; // 100 segundos (4 x 25s)

    function reloadFrame(id) {
      document.getElementById(id).src = url + '&t=' + new Date().getTime();
    }

    function startStaggeredReloading(id, initialDelay) {
      setTimeout(() => {
        reloadFrame(id);
        setInterval(() => reloadFrame(id), interval);
      }, initialDelay);
    }

    startStaggeredReloading('frame1', 0);         // carrega no segundo 0
    startStaggeredReloading('frame2', 29000);     // carrega no segundo 29
    startStaggeredReloading('frame3', 58000);     // carrega no segundo 58
    startStaggeredReloading('frame4', 87000);     // carrega no segundo 87
  </script>
</body>
</html>
